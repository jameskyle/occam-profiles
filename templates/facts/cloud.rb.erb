#!/usr/bin/env ruby
# managed by puppet

url = Hash.new
url['keystone'] = '<%= @keystone %>'
url['nova'] = '<%= @nova %>'
url['cinder'] = '<%= @cinder %>'
url['glance'] = '<%= @glance %>'
url['neutron'] = '<%= @neutron %>'

total = 0
url.each do |service,uri|
  puts "#{service}_url=#{uri}"
  %x( curl --connect-timeout 1 'https://#{uri}' -f -s -o /dev/null 2>/dev/null )
  if $?.exitstatus == 0
    total += 1
    puts "#{service}_available=true"
  end
  if total == url.length
    puts "cloud_available=true"
  end
end
